<% layout("/layouts/boilerplate") %>

<div class="form-container">
    <h2>Create New</h2>
    <br>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data" novalidate>
        <div class="form-group">
            <label for="title" class="form-label">Enter Title</label>
            <input placeholder="Hotel Name" id="title" name="listing[title]" class="form-control" required />
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please enter the title.
            </div>
        </div>

        <div class="form-group">
            <label for="description" class="form-label">Enter Description</label>
            <textarea id="description" name="listing[description]" class="form-control" placeholder="Description" required></textarea>
            <div class="invalid-feedback">
                Please fill in the description.
            </div>
        </div>

        <div class="form-group form-row">
            <div class="form-group-inline">
                <label for="price" class="form-label">Enter Price</label>
                <input placeholder="1000000" id="price" name="listing[price]" class="form-control" required />
                <div class="invalid-feedback">
                    Please fill in the price.
                </div>
            </div>
            <div class="form-group-inline">
                <label for="country" class="form-label">Enter Country</label>
                <input placeholder="India" id="country" name="listing[country]" class="form-control" required />
                <div class="invalid-feedback">
                    Please fill in the country.
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="location" class="form-label">Enter Location</label>
            <input placeholder="Patna, Kolkata, Bhopal, Kota, Delhi" id="location" name="listing[location]" class="form-control" required />
            <div class="invalid-feedback">
                Please fill in the location.
            </div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input placeholder="Destination Image" 
             name="listing[image]" 
             type="file"
             class="form-control" />
        </div>
        
        <br>
        <button type="submit" class="btn btn-dark">Add</button>
    </form>
</div>
