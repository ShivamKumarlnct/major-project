<% layout("/layouts/boilerplate") %>
<div class="form-container">
    <h2>Create New</h2>
    <br>
    <form method="POST" action="/listings" novalidate class="needs-validation">
        <div class="form-group">
            <label for="title" class="form-label">Enter Title</label>
            <input placeholder="Hotel Name" id="title" name="listing[title]" placeholder="Title" class="form-control" required />
<div class="valid-feedback">
      Looks good!
    </div>        </div>

        <div class="form-group">
            <label for="description" class="form-label">Enter Description</label>
            <textarea id="description" name="listing[description]" class="form-control"placeholder="Description" required></textarea>
        </div>
        <div class="form-group form-row">
            <div class="form-group-inline">
                <label for="price" class="form-label">Enter Price</label>
                <input placeholder="1000000" id="price" name="listing[price]" placeholder="Price" class="form-control" required>
            </div>
            <div class="form-group-inline">
                <label for="country" class="form-label">Enter Country</label>
                <input placeholder="india" id="country" name="listing[country]" class="form-control" required>
            </div>
        </div>
        <div class="form-group">
            <label for="location" class="form-label">Enter Location</label>
            <input placeholder="Patna,kolkata,bhopal,kota,delhi" id="location" name="listing[location]" class="form-control"required>
        </div>
        <div class="form-group">
            <label for="image" class="form-label">Image URL</label>
            <input placeholder="Destination Image" id="image" name="listing[image]" class="form-control">
        </div>
        <br>
        <button type="submit" class="btn btn-dark">Add</button>
    </form>
</div>
