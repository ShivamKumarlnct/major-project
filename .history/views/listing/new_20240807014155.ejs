<% layout("/layouts/boilerplate") %>

<body>
    <form method="POST" action="/listings">
        <h2>Crea</h2>
        <div>
            <label for="title" class="form-label">Enter Title</label>
            <input type="text" id="title" name="listing[title]" placeholder="Title" class="form-control">
        </div>
        <div class="form-group">
            <label for="description" class="form-label">Enter Description</label>
            <textarea id="description" name="listing[description]" class="form-control"></textarea>
        </div>
        <div>
            <label for="price" class="form-label">Enter Price</label>
            <input type="text" id="price" name="listing[price]" placeholder="Price" class="form-control">
        </div>
        <div>
            <label for="location" class="form-label">Enter Location</label>
            <input type="text" id="location" name="listing[location]" class="form-control">
        </div>
        <div>
            <label for="country" class="form-label">Enter Country</label>
            <input type="text" id="country" name="listing[country]" class="form-control">
        </div>
        <div>
            <label for="image" class="form-label">Image URL</label>
            <input id="image" name="listing[image]" class="form-control">
        </div>
        <button type="submit" class="btn btn-dark">Add</button>
    </form>
</body>
